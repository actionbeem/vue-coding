{
  "name": "src",
  "version": "1.0.0",
  "description": "My outstanding Nuxt.js project",
  "author": "김종혁",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "rm -rf public/* && cd src && npm run build && cd ../ && cp -R functions/nuxt/dist/client public/assets && cp -R src/static/* public",
    "serve": "yarn build && firebase serve --only functions,hosting",
    "deploy": "firebase deploy --project ratgi-project",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore ."
  },
  "dependencies": {
    "nuxt": "^2.0.0"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^1.0.1",
    "@nuxtjs/eslint-module": "^1.0.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^6.1.0",
    "eslint-plugin-nuxt": ">=0.4.2"
  }
}
